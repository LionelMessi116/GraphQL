{
  "name": "urql",
  "version": "1.0.0-beta.1",
  "description": "A highly customizable and versatile GraphQL client for React",
  "main": "dist/urql.js",
  "umd:main": "dist/urql.umd.js",
  "module": "dist/urql.es.js",
  "typings": "lib/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist/urql.js",
    "dist/urql.umd.js",
    "dist/urql.es.js",
    "lib",
    "docs",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build:bundle": "microbundle build --no-sourcemap --target web",
    "build:clean": "rimraf dist lib",
    "build:ts": "tsc -d --emitDeclarationOnly --outDir lib",
    "build": "run-s build:clean build:ts build:bundle",
    "test": "jest",
    "bundlesize": "bundlesize",
    "lint:tslint": "tslint --project .",
    "lint:prettier": "prettier --write src/**/*.{ts,tsx}",
    "lint": "run-s lint:tslint lint:prettier",
    "prepublishOnly": "run-s build"
  },
  "author": "Formidable",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFiles": [
      "./scripts/setupTests.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "(src/.*(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/test-utils",
      "<rootDir>/src.*/index.ts"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/index.es.js",
      "maxSize": "8 kB"
    }
  ],
  "devDependencies": {
    "@types/enzyme": "3.1.15",
    "@types/graphql": "^14.0.5",
    "@types/jest": "^23.3.13",
    "@types/react": "16.7.10",
    "bundlesize": "^0.17.0",
    "coveralls": "^3.0.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "graphql": "^14.1.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6"
  },
  "peerDependencies": {
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "dependencies": {
    "create-react-context": "^0.2.3",
    "wonka": "^1.4.4"
  },
  "sideEffects": false
}
