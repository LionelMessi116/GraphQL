{
  "name": "urql",
  "version": "0.3.0-next1",
  "description": "A naive React Graphql library",
  "main": "dist/index.js",
  "scripts": {
    "coverage": "jest --coverage",
    "build:clean": "rimraf dist",
    "build:ts": "tsc",
    "build": "npm run build:clean && npm run build:ts",
    "demo:start:graphql-server": "node example/src/server/index.js",
    "demo:start:app": "webpack-dev-server --hot --inline --config \"example/webpack.config.js\"",
    "demo:start": "builder concurrent demo:start:app demo:start:graphql-server",
    "lint": "tslint --project .",
    "test": "jest",
    "bundlesize": "bundlesize",
    "prettier": "prettier --write \"{,!(node_modules|custom-typings|types)/**/}*.{js,jsx,ts,tsx,json,md}\"",
    "precommit": "lint-staged"
  },
  "author": "Ken Wheeler",
  "license": "MIT",
  "jest": {
    "setupFiles": [
      "./src/tests/setup.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/tests/**/*",
      "!src/interfaces/**/*",
      "!src/index.*",
      "!src/**/hash.*",
      "!src/**/typenames.*"
    ],
    "testRegex": "(src/tests/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "bundlesize": [
    {
      "path": "./bundles/urql.es.min.js",
      "maxSize": "8 kB"
    }
  ],
  "devDependencies": {
    "@types/graphql": "^0.12.1",
    "@types/jest": "^23.3.9",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/uuid": "^3.4.3",
    "awesome-typescript-loader": "^5.2.1",
    "builder": "^3.2.3",
    "bundlesize": "^0.17.0",
    "cors": "^2.8.4",
    "coveralls": "^3.0.0",
    "enzyme": "^3.3.0",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql-tools": "^2.18.0",
    "husky": "^0.14.3",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^6.0.1",
    "prettier": "1.10.2",
    "prop-types": "^15.6.0",
    "react": "^16.0.0-0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.0.0-0",
    "react-test-renderer": "^16.2.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^4.0.0-beta.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.13.0",
    "rollup-plugin-uglify": "^3.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.1.6",
    "uuid": "^3.2.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.0.0-0",
    "react-dom": "^16.0.0-0"
  },
  "dependencies": {
    "create-react-context": "^0.2.3",
    "graphql": "^0.13.1",
    "hoist-non-react-statics": "^2.5.0",
    "zen-observable-ts": "^0.8.9"
  },
  "sideEffects": false
}
