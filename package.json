{
  "private": true,
  "workspaces": [
    "packages/*",
    "exchanges/*"
  ],
  "scripts": {
    "test": "jest",
    "check": "tsc",
    "lint": "eslint --ext=js,jsx,ts,tsx .",
    "build": "node ./scripts/rollup/build.js"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*",
      "<rootDir>/exchanges/*"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "./scripts/eslint/preset.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint -c scripts/eslint/preset.js --fix",
    "*.{js,jsx}": "eslint -c scripts/eslint/js-preset.js --fix",
    "*.json": "prettier --write",
    "*.md": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --quiet --relative"
    }
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "^0.24.0",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@changesets/cli": "^2.6.2",
    "@changesets/get-github-info": "^0.4.2",
    "@rollup/plugin-buble": "^0.21.0",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@rollup/plugin-sucrase": "^3.0.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.33",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-plugin-closure-elimination": "^1.3.0",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "execa": "^4.0.0",
    "glob": "^7.1.6",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.1",
    "husky": "^4.2.3",
    "invariant": "^2.2.4",
    "jest": "^25.3.0",
    "jest-watch-yarn-workspaces": "^1.1.0",
    "lint-staged": "^10.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "rollup-plugin-visualizer": "^4.0.4",
    "terser": "^4.6.11",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  }
}
