{
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "dist/cjs",
    "lib": ["dom", "es2018", "esnext.asynciterable", "esnext.array"],
    "jsx": "react",
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "sourceMap": true,
    "pretty": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
