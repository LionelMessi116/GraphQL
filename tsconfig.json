{
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "dist",
    "lib": [
      "es2015",
      "es2017.object",
      "dom",
      "esnext.asynciterable",
      "esnext.array"
    ],
    "jsx": "react",
    "declaration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "pretty": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/test-utils"
  ]
}
